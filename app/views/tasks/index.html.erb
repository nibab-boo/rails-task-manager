<div class="jumbotron text-center"><h1>Your tasks</h1></div>
<div class="container">
  <div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
        <li class="list-group-item"> [<%= task.completed ? "X" : " " %>] <%= task.title %> </li>
      <% end %>
    </ul>
  </div>   
</div>